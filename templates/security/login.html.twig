{# {% extends 'base.html.twig' %} #}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="../bootstrap/css/_login_page_src.css" />

</head>

{% block stylesheets %}
{% endblock %}

{% block body %}

{# <div class="jumbotron jumbotron-fluid">
</div> #}
<form method="post">

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="alert alert-info">
            Bienvenu e {{ app.user.username }}, <a class="btn btn-outline-secondary" href="{{ path('app_logout') }}"> Logout</a>
        </div>
    {% endif %}
    <div class="container d-flex">
        <div class="col-lg-3 mr-4">
        <img src="../bootstrap/img/logo-GouvSn.png" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
        </div>
        <div class="col-lg-6">
        <h6 class="display-8">MINISTÉRE DE L'INTÉRIEUR</h6>
        <p class="lead">Direction Générale de l'Administration Territoriale</p>
        </div>
        <hr class="my-2">
    </div>
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row"> <img src="../bootstrap/img/logodemarch.png" class="logo"> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="../bootstrap/img/uNGdWHi.png" class="image"> </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    <div class="row mb-4 px-3">
                        <h6 class="mb-0 mr-4 mt-2">Authentification... avec</h6>
                        <div class="facebook text-center mr-3">
                            <i class="fa fa-facebook-official" aria-hidden="true"></i>
                            <!-- <div class="fa fa-facebook"></div>-->
                        </div>
                        <div class="twitter text-center mr-3">
                            <div class="fa fa-twitter"></div>
                        </div>
                        <div class="linkedin text-center mr-3">
                            <div class="fa fa-linkedin"></div>
                        </div>
                    </div>
                    <div class="row px-3 mb-4">
                        <div class="line"></div> <small class="or text-center">Or</small>
                        <div class="line"></div>
                    </div>
                    <div class="row px-3"> 
                        <label class="mb-1">
                                <h6 class="mb-0 text-sm">Email Address</h6>
                        </label> 
                        <input class="mb-4 form-control" type="email" name="email" placeholder="Enter a valid email address" value="{{ last_username }}" id="inputEmail" autocomplete="email" required autofocus>
                    </div>

                    <div class="row px-3"> 
                        <label class="mb-1">
                            <h6 class="mb-0 text-sm">Mot de pass</h6>
                        </label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Enter password">
                    </div>
                    {#
                        this section add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                    #}
                    <div class="row px-3 mb-4">
                        <div class="custom-control custom-checkbox custom-control-inline"> <input id="chk1" type="checkbox" name="_remember_me" class="custom-control-input"> <label for="chk1" class="custom-control-label text-sm">Se souvenir de moi</label> </div> <a href="#" class="ml-auto mb-0 text-sm">Mot de pass oublié ?</a>
                    </div>

                    {# ce input _srf_token à verifier son comportement #}
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >


                    {# <div class="row mb-3 px-3"> <button type="submit" class="btn btn-blue text-center">Login</button> </div> #}
                    <div class="row mb-3 px-3"> <button type="submit" class="btn btn-lg btn-primary text-center">Connexion</button> </div>
                    <div class="row mb-4 px-3"> <small class="font-weight-bold">Avez vous un compte ? <a class="text-danger ">Vous pouvez créer un compte !</a></small> </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
{% endblock %}

{% block javascripts %}
    <scripts src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
    </scripts>
    <scripts src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    </scripts>
{% endblock %}
