{# {% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"></script>
{% endblock %} #}

    <div class="container">
        <div class="row" data-masonry='{"percentPosition": true }'>
            {% for gestion_association in gestion_associations %}
                    <div class="col-md-3">
                        <div class="card my-2 bg-light">
                            <div class="col form-group d-flex">
                                <span class="badge badge-primary bg-success" >Récipissé N° : {{ gestion_association.numeroRecipice }}</span>
                                <span class="input-group-addon text-small ps-5">{{ gestion_association.dateSignature ? gestion_association.dateSignature|date('Y-m-d') : '' }}</span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{ gestion_association.denomination|u.truncate(25, "...", true) }}</h5>
                                <p class="card-text">Région <span class="text-muted"> : {{ gestion_association.regions }}</span></p>
                                <div class="">
                                    {# <span class="">Région : {{ gestion_association.regions }}</span> #}
                                    <p class="card-text">Département<span class="text-muted"> : {{ gestion_association.departements }}</span></p>
                                </div>
                                <hr>
                                <div class="inline-group d-flex">
                                    {#<a class="btn btn-outline-primary" href="{{ path('gestion_association_show', {'id': gestion_association.id}) }}" style="margin-right: 2rem;">Détails...</a>#}
                                    <a class="btn btn-outline-primary" href="{{ path('gestion_association_show', {'slug': gestion_association.slug, 'id': gestion_association.id}) }}">Détails...</a>
                                    <button class="btn ms-2">
                                             <span class="badge badge-primary bg-info fw-light text-muted"> {{ gestion_association.adresseSiege|u.truncate(22, '...', true) }} </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
            {% else %}
                {# <div class="row">
                    <div class="col-md-12">
                        no records found
                    </div>
                </div> #}
                <div class="alert alert-warning" role="alert">
                    <strong>Aucune information trouvée à propos de votre recherche !</strong>
                </div>
            {% endfor %}
            {# display navigation #}
            <div class="w-100">
                {{ knp_pagination_render(gestion_associations) }}
            </div>
        </div>
    </div>